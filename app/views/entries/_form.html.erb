<%= semantic_form_for entry do |f| %>

  <%= f.inputs do %>
    <%= f.input :term %>
    <%= f.input :expanded_term %>
    <%= f.input :definition, input_html: { rows: 5 } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, button_html: {
                            class: 'btn btn-primary',
                          } %>
    <%= f.action :cancel, as: :link %>
  <% end %>

<% end %>
